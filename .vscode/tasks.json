{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Copy mods",
			"type": "shell",
			"windows":{
				"command": "./.vscode/filecopy.ps1",
				"args": [
						"${workspaceFolder}"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"runOptions": {
				"instanceLimit": 1,
			}
		}
	]
}